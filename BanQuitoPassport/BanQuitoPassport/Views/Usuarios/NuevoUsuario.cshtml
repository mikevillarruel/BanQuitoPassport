@model BanQuitoPassport.Models.USUARIO
@{
    ViewBag.Title = "NuevoUsuario";
}

<h2>Nuevo Usuario</h2>

@using (Html.BeginForm("NuevoUsuario", "Usuarios", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12">
        @Html.LabelFor(d => d.ID_ROL)
        @Html.TextBoxFor(d => d.ID_ROL, "", new { @class = "form-control " })
        @Html.LabelFor(d => d.ID_AUDITORIA)
        @Html.TextBoxFor(d => d.ID_AUDITORIA, "", new { @class = "form-control " })
        @Html.LabelFor(d => d.ID_EMPLEADO)
        @Html.TextBoxFor(d => d.ID_EMPLEADO, "", new { @class = "form-control " })
        @Html.LabelFor(d => d.ID_ESTADO)
        @Html.TextBoxFor(d => d.ID_ESTADO, "", new { @class = "form-control " })
        @Html.LabelFor(d => d.IDENTIFICADOR)
        @Html.TextBoxFor(d => d.IDENTIFICADOR, "", new { @class = "form-control " })
        @Html.LabelFor(d => d.CONTRASENA)
        @Html.TextBoxFor(d => d.CONTRASENA, "", new { @class = "form-control " })
        <br />
        <div style="text-align:right;">
            <input value="Guardar" class="btn btn-primary" type="submit" />
        </div>
    </div>

</div>
}